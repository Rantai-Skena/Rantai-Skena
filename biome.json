{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.next",
      "!**/dist",
      "!**/.turbo",
      "!**/dev-dist",
      "!**/.zed",
      "!**/.vscode",
      "!**/routeTree.gen.ts",
      "!**/src-tauri",
      "!**/.nuxt",
      "!bts.jsonc",
      "!**/.expo",
      "!**/.wrangler",
      "!**/.alchemy",
      "!**/.svelte-kit",
      "!**/wrangler.jsonc",
      "!**/.source"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,

      "correctness": {
        "useExhaustiveDependencies": "info"
      },

      "nursery": {
        "useSortedClasses": {
          "level": "warn",
          "fix": "safe",
          "options": {
            "functions": ["clsx", "cva", "cn"]
          }
        }
      },

      "performance": {
        "noBarrelFile": "warn",
        "noReExportAll": "warn"
      },

      "style": {
        "noNamespace": "off",
        "noParameterAssign": "warn",
        "useAsConstAssertion": "warn",
        "useDefaultParameterLast": "warn",
        "useEnumInitializers": "off",
        "useSelfClosingElements": "warn",
        "useSingleVarDeclarator": "warn",
        "noUnusedTemplateLiteral": "off",
        "useNumberNamespace": "off",
        "noInferrableTypes": "off",
        "noUselessElse": "warn",
        "useImportType": "info",
        "noImplicitBoolean": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "always"
    }
  },
  "extends": ["ultracite/core"]
}
